<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage_back"
    android:orientation="vertical"

    tools:context=".Payout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="0"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/profit_header" />

            <TextView
                android:id="@+id/coins_number_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:textColor="#FDD835"
                android:textSize="18sp"
                android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="0" />

            <EditText
                android:id="@+id/wanted_coins_number_id"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0"
                android:background="@drawable/login_edit_text_back"
                android:ems="10"
                android:foregroundGravity="center"
                android:gravity="center"
                android:hint="@string/coins_number"
                android:inputType="number|textPersonName|textPhonetic" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" />

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/agree_button"
                android:fontFamily="@font/caironormal"
                android:onClick="check"
                android:text="@string/check"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_weight="0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cart_recieve_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                android:gravity="right"
                android:text="@string/prefer_way"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/radio_groub_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

                <RadioButton
                    android:id="@+id/radioButton_paypal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Paypal"
                    android:textSize="24sp" />

                <RadioButton
                    android:id="@+id/radioButton_voda"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vodafon Cash"
                    android:textSize="24sp"
                    android:visibility="visible" />
            </RadioGroup>

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_weight="0" />

            <Button
                android:id="@+id/button14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/agree_button"
                android:fontFamily="@font/caironormal"
                android:onClick="send"
                android:text="@string/send"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/paypiy_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:visibility="invisible" />

            <Button
                android:id="@+id/button15"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:fontFamily="@font/caironormal"
                android:onClick="get_status"
                android:text="@string/press_here_for_status"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>